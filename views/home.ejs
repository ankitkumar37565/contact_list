<html lang="en">
  <head>
    <title><%=locals.title%></title>
    <script
      src="https://kit.fontawesome.com/d66d3051d1.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <div class="container">
      <!-- heading section  -->

      <h1 id="page-heading">
        <i class="fa-solid fa-address-book"></i>
        &ensp;My Contacts List
      </h1>

      <!-- body section  -->

      <div id="page-body">
        <ul>
          <%for(let i of contact_list){%>
          <li>
            <div class="detail">
              <p><%=i.name%></p>

              <p><%=i.phone%></p>
            </div>
            <div class="delete">
              <a href="/delete-contact/?id=<%=i._id%>">
                <i class="fa-solid fa-trash-can"></i>
              </a>
            </div>
          </li>
          <%}%>
        </ul>

        <!-- input section  inside body section -->

        <form action="/create-contact" method="POST">
          <div id="input">
            <input type="text" name="name" placeholder="Enter name" required />
            <input
              type="number"
              name="phone"
              placeholder="Enter phone"
              required
            />
          </div>
          <div id="button">
            <button type="submit">add contact</button>
          </div>
        </form>
      </div>
      <script type="text/javascript" src="/js/home.js"></script>
    </div>
  </body>
</html>
